<?xml version="1.0" encoding="UTF-8"?>
<extension type="template" client="site">
  <name>andromeda</name>
  <version>0.3</version>
  <creationDate>October 2024</creationDate>
  <author>Helge Lente</author>
  <authorEmail>h.lente@gmx.net</authorEmail>
  <copyright>(C) 2024 Helge Lente</copyright>
  <description>A DPSG themed template based on Cassiopeia</description>
  <positions>
    <position>topbar</position>
    <position>menu</position>
    <position>search</position>
    <position>banner</position>
    <position>top-a</position>
    <position>top-b</position>
    <position>main-top</position>
    <position>main-bottom</position>
    <position>breadcrumbs</position>
    <position>sidebar-left</position>
    <position>sidebar-right</position>
    <position>bottom-a</position>
    <position>bottom-b</position>
    <position>footer</position>
    <position>debug</position>
  </positions>
  <config>
    <fields name="params">
      <fieldset name="advanced">
        <field name="brand" type="radio" label="TPL_ANDROMEDA_BRAND_LABEL" default="1" layout="joomla.form.field.radio.switcher" filter="boolean">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="logoFile" type="media" default="" label="TPL_ANDROMEDA_LOGO_LABEL" showon="brand:1"/>
        <field name="siteTitle" type="text" default="" label="TPL_ANDROMEDA_TITLE" filter="string" showon="brand:1"/>
        <!--<field name="siteDescription" type="text" default="" label="TPL_ANDROMEDA_TAGLINE_LABEL" description="TPL_ANDROMEDA_TAGLINE_DESC" filter="string" showon="brand:1"/>
        <field name="useFontScheme" type="groupedlist" label="TPL_ANDROMEDA_FONT_LABEL" default="0">
          <option value="0">JNONE</option>
          <group label="TPL_ANDROMEDA_FONT_GROUP_LOCAL">
            <option value="media/templates/site/cassiopeia_andromeda/css/global/fonts-local_roboto.css">Roboto (local)</option>
          </group>
          <group label="TPL_ANDROMEDA_FONT_GROUP_WEB">
            <option value="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@100;300;400;700&amp;display=swap">Fira Sans (web)</option>
            <option value="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@100;300;400;700&amp;family=Roboto:wght@100;300;400;700&amp;display=swap">Roboto + Noto Sans (web)</option>
          </group>
        </field> -->
        <!-- <field name="noteFontScheme" type="note" description="TPL_ANDROMEDA_FONT_NOTE_TEXT" class="alert alert-warning"/> -->
        <!-- <field name="colorName" type="filelist" label="TPL_ANDROMEDA_COLOR_NAME_LABEL" default="colors_standard" fileFilter="^custom.+[^min]\.css$" exclude="^colors.+" stripext="true" hide_none="true" hide_default="true" directory="media/templates/site/cassiopeia_andromeda/css/global/" validate="options">
          <option value="colors_standard">TPL_ANDROMEDA_COLOR_NAME_STANDARD</option>
          <option value="colors_alternative">TPL_ANDROMEDA_COLOR_NAME_ALTERNATIVE</option>
        </field> -->
        <field name="fluidContainer" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="TPL_ANDROMEDA_FLUID_LABEL">
          <option value="0">TPL_ANDROMEDA_STATIC</option>
          <option value="1">TPL_ANDROMEDA_FLUID</option>
        </field>
        <field name="stickyHeader" type="radio" label="TPL_ANDROMEDA_STICKY_LABEL" layout="joomla.form.field.radio.switcher" default="0" filter="integer">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="stickyPositions" type="radio" label="TPL_ANDROMEDA_STICKY_POSITIONS_LABEL" layout="joomla.form.field.radio.switcher" default="0">
          <option value="0">TPL_ANDROMEDA_POSITION_MENU</option>
          <option value="1">TPL_ANDROMEDA_POSITION_TOPBAR</option>
        </field>
        <field name="backTop" type="radio" label="TPL_ANDROMEDA_BACKTOTOP_LABEL" layout="joomla.form.field.radio.switcher" default="0" filter="integer">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
      </fieldset>
    </fields>
  </config>
  <files>
    <!--filename>favicon.ico</filename-->
    <filename>index.php</filename>
    <filename>joomla.asset.json</filename>
    <filename>templateDetails.xml</filename>
    <folder>html</folder>
  </files>

  <languages folder="language">
    <language tag="en-GB">en-GB/tpl_andromeda.ini</language>
    <language tag="de-DE">de-DE/tpl_andromeda.ini</language>
  </languages>

  <media folder="media" destination="templates/site/andromeda">
    <folder>css</folder>
    <folder>fonts</folder>
    <folder>images</folder>
    <folder>js</folder>
  </media>

  <inheritable>0</inheritable>
  <parent>cassiopeia</parent>
</extension>
